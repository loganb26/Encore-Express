<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EncoreExpress.Pages.PlayerPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="PlayerPage">

    <Grid RowDefinitions="Auto,Auto,Auto" >
        <Label Grid.Row="0" x:Name="songNameLabel" Text="Song 1" HorizontalOptions="Center" VerticalOptions="Center"
                   FontSize="20" Margin="60"/>

        <toolkit:MediaElement Grid.Row="1"
            WidthRequest="640" HeightRequest="320"
            Source="embed://jazz.mp3"
            ShouldAutoPlay="False"/>



        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Grid.Row="2">
            <ImageButton x:Name="backButton" Source="back_50x50.png" WidthRequest="50" HeightRequest="50" Clicked="BackButton_Clicked"/>
            <ImageButton x:Name="forwardButton" Source="skip_50x50.png" WidthRequest="50" HeightRequest="50" Clicked="ForwardButton_Clicked"/>
        </StackLayout>
    </Grid>
</ContentPage>
