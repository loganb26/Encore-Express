<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EncoreExpress.Pages.PlaylistPage"
             Title="Playlist">

    <StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="End">
            <ImageButton Margin="20" x:Name="menuButton" Source="menu.png" WidthRequest="50" HeightRequest="50" Clicked="OnMenuClicked" BackgroundColor="Transparent"/>
        </StackLayout>
        <ListView x:Name="songsListView"
                  ItemsSource="{Binding Songs}"
                  ItemSelected="SongsListView_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Upload Songs" Clicked="AddSongsButton_Clicked"/>
    </StackLayout>

</ContentPage>
