<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EncoreExpress.Pages.PlaylistPage"
             Title="PlaylistPage">
    <VerticalStackLayout>
        <Label 
            Text="Playlist Page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <ListVeiw x:Name="Playlist"
          <ListVeiw.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Horizontal">
        <Label Text= "{Binding Name}" />
        <Switch IsToggled="{}Binding IsAddedToQueue}" />
                    </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
       <Button Text="Browse Local Songs" Clicked="OnBrowseLocalSongsClicked" />
     <Button Text="Back" Clicked="OnBackButtonClicked" />
 </VerticalStackLayout>
</ContentPage>
