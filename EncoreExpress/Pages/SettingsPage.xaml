<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EncoreExpress.Pages.SettingPage"
             Title="Settings">

    <StackLayout>
        <Label Text="Settings" HorizontalOptions="Center" FontSize="40" Margin="30"/>

        <StackLayout>
            <Label Text="Light/Dark Mode" HorizontalOptions="Center" FontSize="20"/>
            <Switch x:Name="modeSwitch" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Toggled="LightModeSwitch_Toggled"/>
        </StackLayout>




        <Button Text="Back to Player" Clicked="GoBackToPlayerPage" VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>
