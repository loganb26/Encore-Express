<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EncoreExpress.Pages.SettingPage"
             Title="Settings">

    <StackLayout>
        <!-- Mute Switch -->
        <Switch x:Name="muteSwitch" VerticalOptions="CenterAndExpand"/>

        <!-- Playback Speed Picker -->
        <Picker x:Name="speedPicker" VerticalOptions="CenterAndExpand"/>

        <!-- Default Volume Slider -->
        <Slider x:Name="volumeSlider" VerticalOptions="CenterAndExpand"/>

        <!-- Button to go back to PlayerPage -->
        <Button Text="Back to Player" Clicked="GoBackToPlayerPage" VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>
