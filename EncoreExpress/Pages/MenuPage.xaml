<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EncoreExpress.Pages.MenuPage"
             Title="MenuPage">
    <VerticalStackLayout>
        <Label Text="Main Menu" HorizontalOptions="Center" FontSize="40"/>
        <Label Text="Welcome to Encore Express!" HorizontalOptions="Center" FontSize="30"/>
        <Label Text="Brought to you by the Music Makers TM" HorizontalOptions="Center" FontSize="20"/>

        <Label Text="What would you like to do?" HorizontalOptions="Center" FontSize="20" Margin="20"/>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="Go to the SongPlayer"  FontSize="20" Margin="20" Clicked="GoToPlayer"/>
            <Button Text="Make a playlist"  FontSize="20" Margin="20" Clicked="GoToPlaylist"/>
        </HorizontalStackLayout>

        
    </VerticalStackLayout>
</ContentPage>
